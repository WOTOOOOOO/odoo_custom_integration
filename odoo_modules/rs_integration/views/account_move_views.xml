<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_rs_inherit" model="ir.ui.view">
        <field name="name">account.move.form.rs.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Button to Header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_to_rs_ge" 
                        string="Send to RS.ge" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('rs_submission_status', 'in', ['submitted', 'accepted'])]}"
                        groups="account.group_account_invoice"/>
            </xpath>

            <!-- Add Status Fields to Form -->
            <xpath expr="//notebook" position="inside">
                <page string="RS.ge Integration" name="rs_integration_page">
                    <group>
                        <group>
                            <field name="rs_submission_status" widget="statusbar"/>
                            <field name="rs_document_id"/>
                        </group>
                        <group>
                            <field name="rs_last_response"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
